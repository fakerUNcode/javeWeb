<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <listener>
    <listener-class>listener.CountListener</listener-class>
  </listener>
  <listener>
    <listener-class>excercise.UserLogListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>web.RegisteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/reg.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>web.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>web.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>cart</servlet-name>
    <servlet-class>web.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>cart</servlet-name>
    <url-pattern>/getcart.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>order</servlet-name>
    <servlet-class>web.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>order</servlet-name>
    <url-pattern>/getorder.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>comment</servlet-name>
    <servlet-class>web.CommentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>comment</servlet-name>
    <url-pattern>/comment.do</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>encode</filter-name>
    <filter-class>filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encode</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>login</filter-name>
    <filter-class>filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>login</filter-name>
    <url-pattern>/getcart.do</url-pattern>
    <url-pattern>/getorder.do</url-pattern>
  </filter-mapping>
   
  <filter>
    <filter-name>swords</filter-name>
    <filter-class>filter.SensitiveWordsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>swords</filter-name>
    <url-pattern>comment.do</url-pattern>
  </filter-mapping>
   
  <filter>
    <filter-name>CacheFilter</filter-name>
    <filter-class>filter.CacheFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CacheFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>image</filter-name>
    <filter-class>excercise.ImageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>image</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>